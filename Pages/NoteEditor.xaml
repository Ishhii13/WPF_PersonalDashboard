<Page x:Class="WPF_PersonalDashboard.Pages.NoteEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_PersonalDashboard.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NoteEditor">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="650"/>
        </Grid.ColumnDefinitions>
        
        <Rectangle Grid.Column="1" HorizontalAlignment="Center" Height="400" Stroke="Black" VerticalAlignment="Top" Width="630" Margin="0,10,0,0"/>

        <TextBox x:Name="TitleTextBox"
                 Grid.Column="1"
                 Width="600"
                 Height="40"
                 Margin="10,20,10,0"
                 VerticalAlignment="Top"
                 FontSize="20"/>
                 

        <TextBox x:Name="NoteTextBox"
                 Grid.Column="1"
                 Width="600"
                 Height="250"
                 Margin="10,70,10,0"
                 VerticalAlignment="Top"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 FontSize="14"/>
                 

        <Button x:Name="btn_Add"
                Grid.Column="1"
                Content="Save"
                Width="100"
                Height="40"
                Margin="10,330,10,0"
                VerticalAlignment="Top"
                Click="Save_Click"/>

        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>

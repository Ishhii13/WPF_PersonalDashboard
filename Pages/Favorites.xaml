<Page x:Class="WPF_PersonalDashboard.Pages.Favorites"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_PersonalDashboard.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Favorites">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="650"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="1" Height="360" Margin="10,33,10,58" Background="DarkGray" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="FavoritesWrapPanel" Orientation="Horizontal"/>
        </ScrollViewer>
    </Grid>
</Page>
